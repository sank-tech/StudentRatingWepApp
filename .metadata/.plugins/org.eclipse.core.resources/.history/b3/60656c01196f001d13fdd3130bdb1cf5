<script type = "text/javascript">
function myFun(){
	var flag = true;
	var name = document.subjectwise.subjectName.value;

	if(name == ""){
		alert("Invalid subject name!");
		flag = false;
	}
	else{
		flag = true;
	}
	return flag;
}
</script>
