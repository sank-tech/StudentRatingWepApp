<style type="text/css">
input[type=text] {
	width: 50%;
	padding: 12px 20px;
	margin: 8px 0;
	display: inline-block;
	border: 1px solid #ccc;
	box-sizing: border-box;
}
button{
	background-color: black;
	color: white;
	padding: 14px 20px;
	margin: 8px 0;	
}
button:hover{
	opacity: 0.9;
}
.LoginDiv {
	padding: 16px;
}
</style>
<script type="text/javascript">
function myFun(){
	var flag = true;
	var name = document.addData.studentName.value;
	var subject = document.addData.subjectName.value;
	var category = document.addData.category.value;
	var date = document.addData.date.value;
	var marks = document.addData.marks.value;

	if(name == ""){
		alert("Invalid student name!");
		flag = false;
	}
	else if(subject == ""){
		alert("Invalid subject name!");
		flag = false;
	}
	else if(category == ""){
		alert("Invalid category!");
		flag = false;
	}
	else if(date == ""){
		alert("Invalid date!");
		flag = false;
	}
	else if(marks == ""){
		alert("Invalid marks!");
		flag = false;
	}
	else{
		flag = true;
	}
	return flag;
}
</script>
</head>
<body style="background-color: buttonface;">
	<br>
	<h2 style="text-align: center;">Add New Student Data</h2>
	<br>
	<form name="addData" action="AddStudent" method="post">
		<div class="LoginDiv">

			<label><b>Student Name</b></label> 
                        <input type="text" name="studentName" placeholder="Enter Student Name" /> <br>
			
			<label><b>Subject Name</b></label> 
			<input type="text" name="subjectName" placeholder="Enter Subject Name" /><br>

			<label><b>Assignment Category</b></label> 
			<input type="text" name="category" placeholder="Enter Category" /> <br>
			
			<label><b>Date of Submission</b></label> 
			<input type="text" name="date" placeholder="Enter Subission Date" /> <br>
			
			<label><b>Marks</b></label>
			<input type="text" name="marks" placeholder="Enter Marks" /><br>

			<button type="submit" onclick="return myFun()">Add Student</button>

		</div>
	</form>
</body>
