<script type = "text/javascript">
function myFun(){
	var flag = true;
	var name = document.remove.studentName.value;

	if(name == ""){
		alert("Invalid student name!");
		flag = false;
	}
	else{
		flag = true;
	}
	return flag;
}
</script>
